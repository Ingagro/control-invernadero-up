{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["public/**"]
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/public/assets/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/public/js/$1"
        },
        {
            "src": "/(.+\\.(css|png|jpg|jpeg|gif|ico|svg))",
            "dest": "/public/$1"
        },
        {
            "src": "/login.html",
            "dest": "/server.js"
        },
        {
            "src": "/index.html",
            "dest": "/server.js"
        },
        {
            "src": "/",
            "dest": "/server.js"
        }
    ]
}